<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="#C5C1AA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/preview_title_height">
        <TextView
            android:id="@+id/preview_word_close_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="@color/preview_red"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/preview_top_txt_size"
            android:text="@string/preview_word_close"/>
        <TextView
            android:id="@+id/preview_word_close_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/preview_top_txt_size"
            android:text="添加"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/preview_add_words"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lines="6"
        />
</LinearLayout>