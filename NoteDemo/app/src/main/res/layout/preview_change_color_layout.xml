<?xml version="1.0" encoding="utf-8"?>
<com.ruaho.note.view.ChooseColorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/preview_choose_color_bar_width"
    android:layout_height="@dimen/preview_choose_color_bar_width"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preview_choose_color_bar"
    android:paddingLeft="20dp"
    android:orientation="horizontal">
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_red"
        app:mSelect="true"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_orange"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_yellow"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_green"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_white"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_sky_blue"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_dark_blue"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_purple"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
    <com.ruaho.note.view.ColorBlockView
        app:mColor="@color/preview_black"
        app:mSelect="false"
        android:layout_width="@dimen/preview_color_block_height"
        android:layout_height="@dimen/preview_color_block_height" />
</com.ruaho.note.view.ChooseColorLayout>