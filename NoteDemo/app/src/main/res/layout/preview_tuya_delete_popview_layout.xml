<?xml version="1.0" encoding="utf-8"?><RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#553b3a3a"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/content"
        android:layout_marginLeft="@dimen/preview_popwindow_item_marginleft"
        android:layout_marginRight="@dimen/preview_popwindow_item_marginleft"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="#333"
            android:text="删除当前标记"
            android:padding="8dp"
            android:id="@+id/preview_tuya_delete_current"
            android:gravity="center"
            android:textSize="@dimen/preview_top_txt_size"
            android:background="@drawable/preview_textview_round_border_up"
            android:layout_height="@dimen/preview_popwindow_item_height" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/preview_bottom_gray"/>
        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/preview_tuya_delete_all"
            android:layout_width="match_parent"
            android:textColor="#333"
            android:text="删除所有标记"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="@dimen/preview_top_txt_size"
            android:background="@drawable/preview_textview_round_border_down"
            android:layout_height="@dimen/preview_popwindow_item_height" />
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#00969696"/>
        <TextView
            android:layout_marginTop="1dp"
            android:id="@+id/preview_tag_delete_cancel"
            android:layout_width="match_parent"
            android:textColor="#333"
            android:text="取消"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="@dimen/preview_top_txt_size"
            android:background="@drawable/preview_textview_round_border"
            android:layout_height="@dimen/preview_popwindow_item_height" />
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#00969696"/>
    </LinearLayout>
</RelativeLayout>